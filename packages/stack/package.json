{
  "name": "@mpa/stack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./adapter": {
      "import": {
        "default": "./dist/adapter.js",
        "types": "./dist/adapter.d.ts"
      }
    }
  },
  "types": "src/index.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist cdk.out",
    "synth-staging": "cdk synth --app ./dist/stack.js --require-approval never MPAth-staging",
    "deploy-staging": "cdk deploy --app ./dist/stack.js --require-approval never MPAth-staging"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "2.17.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "2.17.0-alpha.0",
    "@mpa/env": "workspace:*",
    "@mpa/log": "workspace:*",
    "@mpa/migration-runner": "workspace:*",
    "@sentry/serverless": "^7.10.0",
    "@types/aws-lambda": "^8.10.93",
    "aws-cdk-lib": "^2.50.0",
    "constructs": "^10.0.87",
    "esbuild": "^0.14.28",
    "glob": "^8.0.3",
    "got": "^12.3.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@mpa/db": "workspace:*",
    "@mpa/events": "workspace:*",
    "@sveltejs/kit": "1.0.0-next.417",
    "@types/glob": "^8.0.0",
    "@types/shelljs": "^0.8.11",
    "aws-cdk": "^2.50.0",
    "tsup": "^5.12.9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "svelte",
        "vite"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "tsup": {
    "clean": true,
    "entry": [
      "src/index.ts",
      "src/stack.ts",
      "src/global.d.ts",
      "src/lambda"
    ],
    "format": [
      "esm"
    ],
    "loader": {
      ".gql": "text",
      ".repo": "text"
    },
    "noExternal": [],
    "external": [
      "SERVER",
      "MANIFEST",
      "STATIC"
    ],
    "splitting": false
  },
  "peerDependencies": {
    "@sveltejs/kit": "1.0.0-next.417"
  }
}