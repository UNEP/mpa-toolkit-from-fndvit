{
  "name": "@mpa/stack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./adapter": {
      "import": {
        "default": "./dist/adapter.js",
        "types": "./dist/adapter.d.ts"
      }
    }
  },
  "types": "src/index.ts",
  "scripts": {
    "build": "pnpm run build:stack && pnpm run build:lambda",
    "build:stack": "tsup --config tsup.config.stack.js",
    "build:lambda": "tsup --config tsup.config.lambda.js",
    "dev": "tsup --config tsup.config.stack.js --watch",
    "clean": "rimraf dist cdk.out",
    "synth-staging": "cdk synth --app ./dist/stack.js --require-approval never MPAth-staging"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "2.17.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "2.17.0-alpha.0",
    "@mpa/env": "workspace:*",
    "@mpa/migration-runner": "workspace:*",
    "@mpa/utils": "workspace:^1.0.0",
    "@types/aws-lambda": "^8.10.93",
    "@types/shelljs": "^0.8.11",
    "aws-cdk-lib": "^2.50.0",
    "aws-xray-sdk-core": "^3.4.0",
    "constructs": "^10.0.87",
    "globby": "^13.1.2",
    "got": "^12.3.1",
    "lodash": "^4.17.21",
    "replace-in-file": "^6.3.5",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@mpa/db": "workspace:*",
    "@mpa/events": "workspace:*",
    "@sveltejs/kit": "1.0.0-next.561",
    "@types/lodash": "^4.14.190",
    "@types/rimraf": "^3.0.2",
    "aws-cdk": "^2.50.0",
    "find-up": "^6.3.0",
    "yaml": "^2.1.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "svelte",
        "vite"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "1.0.0-next.561"
  }
}