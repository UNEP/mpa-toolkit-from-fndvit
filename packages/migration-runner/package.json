{
  "name": "@mpa/migration-runner",
  "version": "1.0.0",
  "main": "./migration-runner.ts",
  "scripts": {
    "prepack": "tsup",
    "clean": "rimraf ./dist",
    "build": "tsup && pnpm build:prepare",
    "build:prepare": "echo '{}' > ./dist/package.json && cp -R ../db/prisma ./dist/",
    "build:generate": "(cd ./dist && npm exec prisma generate)"
  },
  "devDependencies": {
    "aws-lambda": "^1.0.7",
    "prisma": "^4.2.1"
  },
  "dependencies": {
    "@mpa/db": "workspace:*",
    "@mpa/env": "workspace:*",
    "@mpa/log": "workspace:*"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "tsup": {
    "entry": [
      "migration-runner.ts"
    ],
    "splitting": false,
    "clean": true
  }
}
