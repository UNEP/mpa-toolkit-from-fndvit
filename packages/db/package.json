{
  "name": "@mpa/db",
  "version": "1.0.0",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "generate": "prisma generate",
    "migrate": "dotenv -e ../../.env.local prisma migrate dev",
    "nuke": "tsup src/bin/nuke.ts --onSuccess 'node dist/nuke.cjs' && rimraf ./dist",
    "seed": "tsup src/bin/seed.ts --onSuccess 'node dist/seed.cjs' && rimraf ./dist",
    "reset": "tsup src/bin/reset.ts --onSuccess 'node dist/reset.cjs' && rimraf ./dist",
    "test": "vitest",
    "prepare": "pnpm run build && prisma generate",
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@mpa/env": "workspace:*",
    "@mpa/events": "workspace:*",
    "@mpa/log": "workspace:*",
    "@mpa/utils": "workspace:*",
    "@prisma/client": "^3.10.0",
    "ajv": "^8.11.0",
    "brace-expansion": "^2.0.1",
    "chalk": "^5.0.1",
    "clone": "^2.1.2",
    "google-auth-library": "^8.1.1",
    "lorem-ipsum": "^2.0.8",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/brace-expansion": "^1.1.0",
    "dotenv-cli": "^6.0.0",
    "prisma": "^4.2.1",
    "vitest": "^0.21.1"
  },
  "tsup": {
    "entry": [
      "src/bin",
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true
  }
}
