{
  "name": "@mpa/db",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "generate": "prisma generate",
    "migrate": "dotenv -e ../../.env prisma migrate dev",
    "nuke": "tsup src/bin/nuke.ts --onSuccess 'node dist/nuke.cjs' && rm -rf ./dist",
    "seed": "tsup src/bin/seed.ts --onSuccess 'node dist/seed.cjs' && rm -rf ./dist",
    "reset": "tsup src/bin/reset.ts --onSuccess 'node dist/reset.cjs' && rm -rf ./dist",
    "prepare": "pnpm generate"
  },
  "dependencies": {
    "@mpa/env": "workspace:*",
    "@mpa/events": "workspace:*",
    "@mpa/log": "workspace:*",
    "@mpa/utils": "workspace:*",
    "@prisma/client": "^3.10.0",
    "ajv": "^8.11.0",
    "brace-expansion": "^2.0.1",
    "chalk": "^5.0.1",
    "clone": "^2.1.2",
    "google-auth-library": "^8.1.1",
    "lorem-ipsum": "^2.0.8",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/brace-expansion": "^1.1.0",
    "@vercel/ncc": "^0.34.0",
    "dotenv-cli": "^6.0.0",
    "esno": "^0.16.3",
    "prisma": "^4.2.1",
    "tsup": "^5.12.9",
    "tsx": "^3.8.2",
    "vitest": "^0.21.1"
  },
  "tsup": {
    "entry": [
      "src/bin"
    ],
    "format": [
      "cjs"
    ],
    "noExternal": [
      "@mpa/db",
      "@mpa/events",
      "chalk",
      "@mpa/env",
      "@mpa/log",
      "@mpa/utils"
    ],
    "splitting": false,
    "clean": true
  }
}
