{
  "name": "@mpa/db",
  "version": "1.0.0",
  "type": "module",
  "types": "./src",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./src/index.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.cjs",
      "types": "./src/lib/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "prisma generate",
    "generate": "prisma generate",
    "migrate": "pnpm migrate:local && pnpm migrate:test",
    "migrate:local": "dotenv -e ../../.env prisma migrate dev",
    "migrate:test": "dotenv -e ../../.env prisma migrate dev",
    "nuke": "pnpm -F @mpa/scripts run nuke",
    "seed": "pnpm -F @mpa/scripts run seed",
    "seedmigrate": "pnpm -F @mpa/scripts run seedmigrate",
    "docker:up": "docker-compose -p mpa up -d",
    "docker:down": "docker-compose -p mpa down",
    "test": "vitest --no-threads",
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@mpa/env": "workspace:*",
    "@mpa/events": "workspace:*",
    "@mpa/log": "workspace:*",
    "@mpa/utils": "workspace:*",
    "@prisma/client": "^4.7.1",
    "ajv": "^8.11.2",
    "aws-xray-sdk-core": "^3.4.0",
    "brace-expansion": "^2.0.1",
    "clone": "^2.1.2",
    "compute-cosine-similarity": "^1.0.0",
    "google-auth-library": "^8.7.0",
    "lorem-ipsum": "^2.0.8",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/brace-expansion": "^1.1.0",
    "dotenv-cli": "^6.0.0",
    "prisma": "^4.7.1",
    "vitest": "^0.21.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/lib/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ]
  }
}