config({
  default-line-height: 1.2
  default-weight: 300
  html-font-size: 16px // for rem calcs
})

+font-group($family: var(--font-sans-serif))
  h1: 68px
  h1-mobile: 48px
  h2: 48px
  h2-mobile: 32px
  h3: 24px 700
  h3-mobile: 20px 700
  h3-light: 32px
  h4: 20px 700
  h4-light: 24px
  h4-graphic: 20px 700
  h5: 16px 700
  h5-mobile: 14px/20px 700
  h5-light: 20px
  h5-graphic: 16px/24px 700
  ui: 16px 400
  ui-small: 12px/18px 400
  ui-large: 20px/40px 400
  p-graphic: 16px/24px 400
  ui-link: 12px/18px 700

+font-group($family: var(--font-serif))
  p: 18px/32px 400
  p-mobile: 16px/28px 400
  p-medium: 22px/36px 400
  p-large: 28px/42px 400

+responsive-fonts()
  h1-responsive
    default: h1
    small: h1-mobile

  h1-article-responsive
    default: h2
    small: h2-mobile

  summary-card-body
    default: p-medium
    small: p-mobile

  content-card-body
    default: p-graphic
    small: p-graphic

  h3-light-responsive
    default: h3-light
    small: h5-light

  p-graphic-responsive
    default: p-graphic
    small: ui-small

  h2-responsive
    default: h2
    small: h2-mobile

  h3-responsive
    default: h3
    small: h3-mobile

  h4-responsive
    default: h4
    small: h5

  h5-responsive
    default: h5
    small: h5-mobile

  h4-light-responsive
    default: h4-light
    small: h5-light

  p-large-responsive
    default: p-large
    small: 'p'

  p-responsive
    default: 'p'
    small: p-mobile

  ui-large-responsive
    default: ui-large
    small: ui

