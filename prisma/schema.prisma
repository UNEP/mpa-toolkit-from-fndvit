// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  CONTENT_MANAGER
  ADMIN
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  googleId  String? @unique
  role      Role    @default(USER)
  pages     Page[]
}

model CaseStudyFields {
  name String @unique
  yearEstablished Int
  size String
  governance String
  staff String
  budget String
  budgetLevel String
  coordLatitude Float
  coordAltitude Float
  pages Page @relation(fields: [pageId], references: [id])
  pageId Int @id
}

model Page {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  draft     Boolean  @default(true)
  createdAt DateTime @default(now())
  editedAt  DateTime @default(now())
  title     String
  img       String
  summary   String
  caseStudyFields  CaseStudyFields?
  content   Json
  authors   User[]
}
