{
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @mpa/web dev",
    "clean": "pnpm --filter '@mpa/*' clean",
    "build": "pnpm clean && pnpm --filter @mpa/adapter --filter @mpa/web run build",
    "synth": "pnpm run build && pnpm --filter @mpa/adapter synth",
    "deploy": "pnpm run build && pnpm --filter @mpa/adapter run deploy",
    "migrate": "pnpm --filter @mpa/db run migrate",
    "gen": "prisma generate",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. ."
  },
  "name": "mpa-toolkit",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "prisma": "^4.2.1",
    "svelte": "^3.49.0",
    "typescript": "^4.7.4"
  }
}
