{
  "name": "mpa-toolkit",
  "private": true,
  "scripts": {
    "dev": "pnpm -F '@mpa/*' --parallel dev",
    "clean": "pnpm -F '@mpa/*' clean",
    "build": "pnpm -F '@mpa/*' run build",
    "synth": "pnpm run clean && pnpm run build && pnpm stack synth-test",
    "test": "pnpm -F @mpa/* run test",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "depcheck": "pnpm -F '@mpa/scripts' run depcheck",
    "web": "pnpm -F @mpa/web --",
    "db": "pnpm -F @mpa/db --",
    "stack": "pnpm -F @mpa/stack --",
    "scripts": "pnpm -F @mpa/scripts --",
    "log": "pnpm -F @mpa/log --"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "esbuild": "^0.15.16",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.12.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.7.1",
    "prisma": "^4.7.1",
    "rimraf": "^3.0.2",
    "svelte": "^3.53.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  },
  "pnpm": {
    "overrides": {
      "metadata-scraper@0.2.61>domino": "npm:domino-ext@2.1.4"
    }
  }
}
