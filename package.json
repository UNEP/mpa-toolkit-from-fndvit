{
  "name": "mpa-toolkit",
  "private": true,
  "scripts": {
    "dev": "pnpm -F '@mpa/*' --parallel dev",
    "clean": "pnpm -F '@mpa/*' clean",
    "build": "pnpm -F '@mpa/*' run build",
    "synth": "pnpm run clean && pnpm run build && pnpm -F @mpa/stack synth",
    "deploy-staging": "pnpm run clean && pnpm run build && pnpm -F @mpa/stack run deploy-staging",
    "migrate": "pnpm -F @mpa/db run migrate",
    "db:nuke": "pnpm -F @mpa/scripts run nuke",
    "db:seedmigrate": "pnpm -F @mpa/scripts run seedmigrate",
    "db:seed": "pnpm -F @mpa/scripts run seed",
    "test": "pnpm -F @mpa/db run test",
    "gen": "prisma generate",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "docker:up": "docker-compose -p mpa up -d",
    "docker:down": "docker-compose -p mpa down",
    "depcheck": "pnpm -F '@mpa/scripts' run depcheck"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "metadata-scraper": "^0.2.61",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "prisma": "^4.6.1",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.2",
    "svelte": "^3.49.0",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4"
  }
}
