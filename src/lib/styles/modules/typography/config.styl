
config({
  default-line-height: 1.5
})

// `default` requires font-size and weight. breakpoint specific
// definitions require only font-size (and will inherit the rest)
+font-group()
  font-family: 'Montserrat', sans-serif
  h1
    default: 64px/1.2 300
    small: 48px
  h2
    default: 48px 300
    small: 32px
  h2-graphic
    default: 32px/40px 500
  h3
    default: 24px 700
  h3-light
    default: 32px 300
    small: 20px
  h4
    default: 20px 700
  h4-light
    default: 24px 300
  h5
    default: 16px 700
  h5-light
    default: 20px 300
    small: 16px
  h5-graphic
    default: 16px/24px 700
  ui
    default: 16px 300
  ui-small
    default: 12px/18px 400
  p-graphic
    default: 16px/24px 400
    small: 12px/18px

+font-group()
  font-family: 'Bitter', serif
  p
    default: 18px/32px 400
    small: 16px/28px
  p-medium
    default: 22px 400
  p-large
    default: 28px/42px 400
    small: 18px/32px
